<div class="row mt-5">
    <div class="card col-sm-8 m-auto">
        <div class="mt-3">
            <h3 class="text-bold text-center font-weight-bold ">ShortUrl</h3>
            {{> message}}
        </div>
        <form action="/shorturl" method="POST" class="card-body" style="text-align:center;">
            <img src="./logo.png" class="rounded mx-auto d-block" alt="logo">
            <div class="form-group">
                <input type="text" id="url" name="url" class="form-control" />
            </div>
            <button type="submit" class="btn btn-light px-5  btn-outline-primary">
                Shorten!
            </button>
        </form>
    </div>
</div>